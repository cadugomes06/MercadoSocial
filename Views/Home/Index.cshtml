@{
    ViewData["Title"] = "Home";
}

@{
    List<string> listSections = ["Cereais", "Bebidas", "Padaria", "Enlatados",
"Biscoitos", "Laticinios", "Limzepa", "Higiene", "Hortifrut"];

    List<string> imageSection = ["cereais.jpg", "bebidas.jpg", "padaria.jpg", "enlatados.jpg",
"biscoito.jpg", "laticinios.jpg", "produtoLimpeza.jpg", "higienePessoal.jpg", "hortifrut.jpg"];
}



<div class="text-center">
    <h1 class="display-4 mt-4 mb-5 fw-bold font-monospace">Mercado Social</h1>
    
    <div class="d-flex justify-content-between align-items-center" style="height: 150px">
        @for (int i = 0; i < listSections.Count(); i++)
        {
           <div class="">
             <div class="bg-primary rounded-circle d-flex flex-column border border-2 border-info box-shadow shadow" style="height: 100px; width: 100px;">
                <img src="./Assets/@imageSection[i]" 
                     alt="secao-do-mercado"
                     class="w-100 h-100 rounded-circle img-fluid object-fit-fill" />

             </div>
                <p class="text-primary mt-1 text-sm-center fs-6">@listSections[i]</p>
           </div>
        }
    </div>

    <div class="">
        Alguns produtos
    </div>

    <a class="btn btn-primary" asp-controller="Invoice" asp-action="GeneratePDF">gerar pdf</a>
</div>
